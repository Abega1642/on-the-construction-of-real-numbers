    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_closing_paren_in_if" value="false"/>
    
    <setting id="org.eclipse.jdt.core.formatter.organize_imports_on_save" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.number_of_imports_needed_for_star_import" value="999"/>
    <setting id="org.eclipse.jdt.core.formatter.import_order" value="java,javax,org,com"/>
    <setting id="org.eclipse.jdt.core.formatter.remove_unused_imports" value="true"/>

  </settings>
</profile>
