<?xml version="1.0" encoding="UTF-8"?>
<profile kind="CodeFormatterProfile" name="CustomSpotlessProfile" version="17">
  <settings>

    <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
    <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
    <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>

    <setting id="org.eclipse.jdt.core.formatter.insert_space_around_binary_operator" value="true"/>

    <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_method_invocation_arguments" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_method_declaration_parameters" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_allocation_expression" value="true"/>

    <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_comments" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_description" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_tags" value="true"/>
    
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_if" value="true"/>
